{
    "name": "qubus/support",
    "type": "library",
    "description": "Support package.",
    "keywords": [
        "support",
        "assets",
        "container",
        "datetime",
        "serializer"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Parker",
            "email": "josh@joshuaparker.blog"
        }
    ],
    "require": {
        "php": "^7.4",
        "cocur/slugify": "^4.0",
        "mrclay/minify": "^3.0",
        "nesbot/carbon": "^2.41",
        "psr/container": "^1.0",
        "qubus/event-dispatcher": "^1.0",
        "qubus/exception": "^1.1"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.0",
        "mockery/mockery": "^1.3.1",
        "php-coveralls/php-coveralls": "^2.4",
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Qubus\\Support\\": ""
        },
        "files": [
            "Helpers/core.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Qubus\\Tests\\Support\\": "Tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}

{
    "name": "qubus/support",
    "type": "library",
    "description": "Support package.",
    "keywords": [
        "support",
        "assets",
        "container",
        "datetime",
        "serializer"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Parker",
            "email": "josh@joshuaparker.blog"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-ctype": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-simplexml": "*",
        "ext-zlib": "*",
        "cocur/slugify": "^4.1",
        "mrclay/minify": "^3.0",
        "nesbot/carbon": "^2.60",
        "psr/container": "^2",
        "psr/log": "^3",
        "qubus/exception": "^2.0",
        "qubus/inheritance": "^2.0",
        "symfony/var-dumper": "^5.4",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.0",
        "mockery/mockery": "^1.3.1",
        "pestphp/pest": "^1.21",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Qubus\\Support\\": ""
        },
        "files": [
            "Helpers/core.php",
            "Helpers/tdd.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Qubus\\Tests\\Support\\": "Tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        }
    }
}
